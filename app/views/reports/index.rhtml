<div class="yui3-u-1">

  <div class="report-content" id="recipes_report_title">
    <h2 onclick="toggle_report_details('recipes_report_details')">Recetas</h2>
    <div id="recipes_report_details" class="report-details">
      <%= form_for :report, :url=>recipes_report_path do |f| %>
        <%= submit_tag 'Generar Reporte' %>
      <% end %>
    </div>
  </div>

  <div class="report-content">
    <h2 onclick="toggle_report_details('daily_production')">Producci칩n Diaria por F치brica</h2>

<div id="modal">
  <div class="background"></div>
  <div id="catalog">
    <h2>Cat√°logo de materia prima</h2>
    <% form_for :ingredient, :url=>ingredient_select_path, :remote=>true do |f| %>
      <%= f.collection_select :code, @ingredients, :id, :name, {:include_blank => true}, :class=>'chzn-select chzn-done chzn-field-normal' %>
      <%= submit_tag 'Aceptar' %>
      <div id="ingredients_grid"></div>
      <div id="button"><%= button_to_function 'Cerrar', 'close_error_dialog()', :class=>'err_btn' %></div>
    <% end %>
  </div>
</div>
